<p id="notice"><%= notice %></p>

<h1>Citizens</h1>

<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Cpf</th>
      <th>Email</th>
      <th>Birthdate</th>
      <th>Phone</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @citizens.each do |citizen| %>
      <tr>
        <td><%= citizen.full_name %></td>
        <td><%= citizen.cpf %></td>
        <td><%= citizen.email %></td>
        <td><%= citizen.birthdate %></td>
        <td><%= citizen.phone %></td>
        <td><%= citizen.status %></td>
        <td><%= link_to 'Show', citizen %></td>
        <td><%= link_to 'Edit', edit_citizen_path(citizen) %></td>
        <td><%= link_to 'Destroy', citizen, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

